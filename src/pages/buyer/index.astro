---
import Layout from "@/layouts/Layout.astro";
import Menu from "@/components/Menu.astro";

import { useTranslations } from "@/i18n/utils";
import { languages } from "@/i18n/ui";

import FullSearch from "@/components/FullSearch.astro";
import Picture from "astro/components/Picture.astro";
import localImage from "@/../public/images/bg/bg-buyer.webp";

const relativeLocale = Astro.currentLocale || "en";
const t = useTranslations(relativeLocale as keyof typeof languages);

const title = t("SEO.buyer.title");
const description = t("SEO.buyer.description");
---

<Layout title={title} description={description}>
  <Menu isFloating isWhite />
  <div class="h-64 w-full">
    <Picture
      src={localImage}
      formats={["avif", "webp", "jpeg"]}
      alt="background home image"
      style={{
        objectFit: "cover",
        objectPosition: "bottom",
        width: "100%",
        height: "100%",
      }}
      pictureAttributes={{
        class: "w-full h-full",
      }}
    />
  </div>
  <main>
    <section
      class="max-w-7xl mx-auto flex flex-col lg:flex-row justify-center items-center gap-4 lg:gap-16 md-gap-32 my-20"
    >
      <h1
        class="font-serif italic text-3xl md:text-4xl text-center lg:text-left max-w-7/12 lg:max-w-3/12"
      >
        {t("buyer.title")}
      </h1>
      <p
        class="font-sans text-sm md:text-base text-pretty max-w-lg px-10 md:px-0"
      >
        {t("buyer.description")}
      </p>
    </section>

    <FullSearch />
  </main>
</Layout>
