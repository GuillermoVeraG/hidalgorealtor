---
import Layout from "@/layouts/Layout.astro";
import Menu from "@/components/Menu.astro";
import { useTranslations } from "@/i18n/utils";
import { languages } from "@/i18n/ui";

import FullSearch from "@/components/FullSearch.astro";

const relativeLocale = Astro.currentLocale || "en";
const t = useTranslations(relativeLocale as keyof typeof languages);
---

<Layout title={t("buyer.site.title")}>
  <Menu isFloating isWhite />
  <div class="h-64 w-full bg-seller-banner bg-cover bg-no-repeat"></div>
  <main>
    <section
      class="max-w-7xl m-auto flex flex-row justify-center items-center gap-32 my-20"
    >
      <h1 class="font-serif italic text-3xl md:text-4xl max-w-64">
        {t("buyer.title")}
      </h1>
      <p
        class="font-sans text-sm md:text-base text-pretty max-w-lg px-10 md:px-0"
      >
        {t("buyer.desc")}
      </p>
    </section>

    <FullSearch />
  </main>
</Layout>
