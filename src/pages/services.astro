---
import Layout from "@/layouts/Layout.astro";
import Menu from "@/components/Menu.astro";
import ServicesItems from "@/components/ServicesItems.astro";
import Testimonials from "@/components/Testimonials.astro";
import { useTranslations } from "@/i18n/utils";
import { languages } from "@/i18n/ui";

const relativeLocale = Astro.currentLocale || "en";
const t = useTranslations(relativeLocale as keyof typeof languages);

const serviceItems = [
  {
    icon: "RealEstate",
    title: t("our.services.title1"),
    desc1: t("our.services.Selling.description1"),
    desc2: t("our.services.Selling.description2"),
    desc3: t("our.services.Selling.description3"),
  },
  {
    icon: "HouseMoney",
    title: t("our.services.title2"),
    desc1: t("our.services.buying.description1"),
    desc2: t("our.services.buying.description2"),
    desc3: t("our.services.buying.description3"),
  },
  {
    icon: "Keys",
    title: t("our.services.title3"),
    desc1: t("our.services.renting.description1"),
    desc2: t("our.services.renting.description2"),
  },
];
---

<Layout title="Welcome a hidalgo">
  <Menu isFloating isWhite />
  <div
    class="h-[276px] w-full bg-services-banner bg-cover bg-bottom bg-no-repeat flex justify-center items-center"
  >
  </div>

  <section class="max-w-7xl mx-auto mb-10 mt-20">
    <h2
      class="capitalize font-serif italic text-3xl md:text-5xl text-center mx-auto"
    >
      {t("our.services.title")}
    </h2>
    <p class="mx-auto text-center w-[420px] my-10">
      {t("our.services.description")}
    </p>
    <div
      class="flex flex-wrap flex-col md:flex-row justify-evenly items-center md:items-start gap-14 md:gap-4"
    >
      {
        serviceItems.map(({ icon, title, desc1, desc2, desc3 }) => (
          <ServicesItems
            icon={icon}
            title={title}
            desc1={desc1}
            desc2={desc2}
            desc3={desc3}
          />
        ))
      }
    </div>
  </section>

  <Testimonials />
</Layout>
