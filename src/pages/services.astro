---
import Layout from "@/layouts/Layout.astro";
import Menu from "@/components/Menu.astro";
import ServicesItems from "@/components/ServicesItems.astro";
import Testimonials from "@/components/Testimonials.astro";
import { useTranslations } from "@/i18n/utils";
import { languages } from "@/i18n/ui";
import Picture from "astro/components/Picture.astro";

const relativeLocale = Astro.currentLocale || "en";
const t = useTranslations(relativeLocale as keyof typeof languages);

const serviceItems = [
  {
    icon: "selling",
    title: t("our.services.title1"),
    desc1: t("our.services.Selling.description1"),
    desc2: t("our.services.Selling.description2"),
    desc3: t("our.services.Selling.description3"),
  },
  {
    icon: "buying",
    title: t("our.services.title2"),
    desc1: t("our.services.buying.description1"),
    desc2: t("our.services.buying.description2"),
    desc3: t("our.services.buying.description3"),
  },
  {
    icon: "investing",
    title: t("our.services.title3"),
    desc1: t("our.services.investing.description1"),
    desc2: t("our.services.investing.description2"),
    desc3: t("our.services.investing.description3"),
  },
  {
    icon: "renting",
    title: t("our.services.title4"),
    desc1: t("our.services.renting.description1"),
    desc2: t("our.services.renting.description2"),
    desc3: t("our.services.renting.description3"),
  },
];

const title = t("SEO.services.title");
const description = t("SEO.services.description");
---

<Layout title={title} description={description}>
  <Menu isFloating isWhite />
  <div class="h-[276px] w-full flex justify-center items-center">
    <Picture
      width={1280}
      height={277}
      src="/images/bg/bg-services.webp"
      formats={["avif", "webp", "jpeg"]}
      alt="background home image"
      style={{
        objectFit: "cover",
        objectPosition: "bottom",
        width: "100%",
        height: "100%",
      }}
      pictureAttributes={{
        class: "w-full h-full",
      }}
    />
  </div>

  <section class="max-w-7xl mx-auto mb-10 mt-20 flex flex-col items-center">
    <h2
      class="capitalize font-serif italic text-3xl md:text-5xl text-center mx-auto"
    >
      {t("our.services.title")}
    </h2>
    <p class="mx-auto text-center w-[420px] my-10">
      {t("our.services.description")}
    </p>
    <div
      class="w-full md:w-10/12 lg:w-8/12 grid grid-cols-1 md:grid-cols-2 gap-20 md:gap-14 mt-28 justify-items-center"
    >
      {
        serviceItems.map(({ icon, title, desc1, desc2, desc3 }) => (
          <ServicesItems
            icon={icon}
            title={title}
            desc1={desc1}
            desc2={desc2}
            desc3={desc3}
          />
        ))
      }
    </div>
  </section>

  <Testimonials />
</Layout>
